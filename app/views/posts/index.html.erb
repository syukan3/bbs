<html>
  <head>
    <h1>Posts#index</h1>
    <p>Find me in app/views/posts/index.html.erb</p>
  </head>

  <body>
    <br><br>
    <p>All Posts</p>
    <p>------------------------------------------------------------</p>
    <% @posts.each do |post| %>
      <%= link_to(post.user.name, "/users/#{post.user.id}") %>
      <%= link_to(post.content, "/posts/#{post.id}") %>
      <p>------------------------------------------------------------</p>
      <br>
    <% end %>
  </body>

</html>
