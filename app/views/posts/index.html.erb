<h1>Posts#index</h1>
<p>Find me in app/views/posts/index.html.erb</p>
<br><br>
<p>All Posts</p>
<p>------------------------------------------------------------</p>
<% @posts.each do |post| %>
  <% if current_user%>
    <% if post.user.name != "Guest" %>
      <%= link_to(post.user.name, user_path(post.user)) %> : &ensp;
    <% else %>
      Guest : &ensp;
    <% end %>
      <%= link_to(post.content, posts_path(post.id)) %>
      <p>------------------------------------------------------------</p>
      <br>
  <% end %>
<% end %>
